###############################################################################
# Makefile
###############################################################################

TEX = $(wildcard *.tex)
BN = $(basename $(TEX))
DVI = $(TEX:.tex=.dvi)
PDF = $(TEX:.tex=.pdf)

###############################################################################

default: $(DVI)

all: $(PDF)

auto:
	while true; do nice $(MAKE); sleep 1; done

clean:
	$(RM) $(BN).{aux,bbl,blg,dvi,log,nav,out,pdf,snm,toc} WARNINGS *~

###############################################################################

.PHONY: all auto clean default

###############################################################################

%.dvi: %.tex
	latex $<
	BIBINPUTS=../../../../biblio bibtex $*
	latex $<
	latex $<

%.pdf: %.dvi
	dvipdf $<

###############################################################################

