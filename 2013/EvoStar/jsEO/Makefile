###############################################################################
# Makefile
###############################################################################

TEX = $(wildcard *.tex)
BIB = $(wildcard ../../../../biblio/*.bib)
BN = $(basename $(TEX))
PDF = $(TEX:.tex=.pdf)

###############################################################################

all: $(PDF)

auto:
	while true; do nice $(MAKE); sleep 1; done

clean:
	$(RM) $(BN).{aux,bbl,blg,dvi,log,nav,out,pdf,snm,toc} WARNINGS core.* *~

###############################################################################

.PHONY: all auto clean

###############################################################################

%.pdf: %.tex $(BIB)
	pdflatex $<
	bibtex $*
	pdflatex $<
	pdflatex $<

###############################################################################

