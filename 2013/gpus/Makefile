###############################################################################
# Makefile
###############################################################################

DIA = $(wildcard *.dia)
EPS = $(DIA:.dia=.eps)
TEX = $(wildcard *.tex)
BBL = $(TEX:.tex=.bbl)
PDF = $(TEX:.tex=.pdf)

###############################################################################

all:	$(EPS) $(PDF)

auto:
	while true; do $(MAKE); sleep 1; done

clean:
	latexmk -C
	$(RM) $(BBL) $(EPS) *~

###############################################################################

%.dvi: %.tex $(EPS)
	latexmk -dvi -f $*

%.eps: %.dia
	dia -e $@ $<

%.pdf:	%.dvi
	dvipdf $<

###############################################################################

.NOEXPORT:

###############################################################################

