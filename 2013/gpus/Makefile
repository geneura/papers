###############################################################################
# Makefile
###############################################################################

DIA = $(wildcard *.dia)
EPS = $(DIA:.dia=.eps)
TEX = $(wildcard *.tex)
BBL = $(TEX:.tex=.bbl)
PDF = $(TEX:.tex=.pdf)

###############################################################################

all: $(EPS) $(PDF)

auto: $(EPS)
	latexmk -pdf -pvc

clean:
	latexmk -C
	$(RM) $(BBL) $(EPS) *-eps-converted-to.pdf *~

###############################################################################

%.eps: %.dia
	dia -e $@ $<

%.pdf: %.tex $(EPS)
	latexmk -f -pdf $*

###############################################################################

.NOEXPORT:

###############################################################################

